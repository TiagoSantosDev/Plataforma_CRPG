<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/meal_choice_success"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingStart="50dp"
  android:paddingEnd="50dp"
  android:paddingTop="50dp"
  android:paddingBottom="200dp"
  android:background="@color/PrimaryGreen"
  android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@color/white_93"
        android:radius="50dp" />

    <TextView
        android:id="@+id/check_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/green_check"
        android:textAlignment="center"
        android:textColor="@color/PrimaryGreen"
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@id/success_text"
        app:layout_constraintTop_toTopOf="@id/view" />

    <TextView
        android:id="@+id/success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:text="@string/meal_criado_c_sucesso"
        android:textAlignment="center"
        android:textColor="@color/PrimaryGreen"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/check_text"/>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textSize="20sp"
        android:layout_below="@id/success_text"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/md_blue_100"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/success_text" />
  </RelativeLayout>

</RelativeLayout>