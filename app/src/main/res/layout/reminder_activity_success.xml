<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/successLayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/PrimaryGreen"
  android:orientation="vertical">


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_centerInParent="true">

      <View
          android:id="@+id/view"
          android:layout_width="266dp"
          android:layout_height="441dp"
          android:background="@color/white_93"
          android:radius="50dp"
          android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/check_text"
        android:layout_width="151dp"
        android:layout_height="160dp"
        android:layout_above="@id/success_text"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-21dp"
        android:gravity="center_horizontal"
        android:text="@string/green_check"
        android:textAlignment="center"
        android:textColor="@color/PrimaryGreen"
        android:textSize="100sp" />

    <TextView
        android:id="@+id/success_text"
        android:layout_width="231dp"
        android:layout_height="149dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="@string/criado_c_sucesso"
        android:textAlignment="center"
        android:textColor="@color/PrimaryGreen"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:text="@string/ok"
        android:textSize="25sp"
        android:layout_below="@id/success_text"
        android:layout_centerInParent="true"
        app:backgroundTint="@color/md_blue_100"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/success_text" />
    </RelativeLayout>

</RelativeLayout>