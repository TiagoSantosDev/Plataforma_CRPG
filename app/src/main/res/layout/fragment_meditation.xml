<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.meditation.MeditationFragment"
    android:background="@color/white">

    <TextView
        android:id="@+id/ver_horarios"
        android:layout_width="382dp"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/como_gostaria_de_se_sentir"
        android:textAlignment="center"
        android:textColor="@color/md_blue_100"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <FrameLayout
        android:layout_width="381dp"
        android:layout_height="545dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="114dp">

        <FrameLayout
            android:id="@+id/frame_meditation_1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="30dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_mood_relaxed"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="15dp"
                android:gravity="start|center_vertical"
                android:text="@string/relaxado"
                android:textAlignment="center"
                android:textColor="@color/md_blue_100"
                android:textSize="25sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:rippleColor="@color/md_blue_100"
                app:strokeColor="@color/md_blue_100"
                app:strokeWidth="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_mood_happy"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_gravity="end|center_vertical"
                android:text="@string/feliz"
                android:textAlignment="center"
                android:textColor="@color/md_blue_100"
                android:textSize="25sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:rippleColor="@color/md_blue_100"
                app:strokeColor="@color/md_blue_100"
                app:strokeWidth="5dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_meditation_2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toBottomOf="@id/frame_meditation_1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_mood_sleepy"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:text="@string/com_sono"
                android:textAlignment="center"
                android:textColor="@color/md_blue_100"
                android:textSize="25sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:rippleColor="@color/md_blue_100"
                app:strokeColor="@color/md_blue_100"
                app:strokeWidth="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_mood_confident"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_gravity="end|center_vertical"
                android:gravity="center_vertical"
                android:text="@string/confiante"
                android:textAlignment="center"
                android:textColor="@color/md_blue_100"
                android:textSize="25sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:rippleColor="@color/md_blue_100"
                app:strokeColor="@color/md_blue_100"
                app:strokeWidth="5dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_meditation_3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="370dp"
            app:layout_constraintTop_toBottomOf="@id/frame_meditation_1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_mood_loved"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:text="@string/querido"
                android:textAlignment="center"
                android:textColor="@color/md_blue_100"
                android:textSize="25sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:rippleColor="@color/md_blue_100"
                app:strokeColor="@color/md_blue_100"
                app:strokeWidth="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_mood_mindful"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_gravity="end|center_vertical"
                android:gravity="center_vertical"
                android:text="@string/mente_s"
                android:textAlignment="center"
                android:textColor="@color/md_blue_100"
                android:textSize="25sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="8dp"
                app:rippleColor="@color/md_blue_100"
                app:strokeColor="@color/md_blue_100"
                app:strokeWidth="5dp" />
        </FrameLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

