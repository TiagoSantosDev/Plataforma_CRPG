<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible"
    tools:context="com.plataforma.crpg.ui.notes.NewVoiceNoteFragment">

    <TextView
        android:id="@+id/title_nova_nota_texto"
        android:layout_width="394dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif"
        android:text="@string/nova_nota_de_voz"
        android:textAlignment="center"
        android:textColor="@color/md_blue_100"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <FrameLayout
        android:layout_width="379dp"
        android:layout_height="452dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_nova_nota_texto">

        <FrameLayout
            android:id="@+id/frame_titulo_nota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/frame_conteudo_nota">

            <TextView
                android:id="@+id/titulo_nova_nota"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/titulo_da_nota"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="@color/md_blue_100"
                android:textSize="25sp"/>

            <EditText
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/titulo_nova_nota" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/frame_conteudo_nota"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frame_titulo_nota">

            <TextView
                android:id="@+id/conteudo_nova_nota"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:text="@string/conteudo"
                android:textAlignment="center"
                android:textColor="@color/md_blue_100"
                android:textSize="25sp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_start_recording"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginRight="40dp"
                app:layout_constraintRight_toLeftOf="@+id/button_stop_recording"
                app:layout_constraintTop_toBottomOf="@+id/titulo_nova_nota"
                app:srcCompat="@drawable/ic_arrow_right_24dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_stop_recording"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="40dp"
                app:layout_constraintTop_toBottomOf="@+id/titulo_nova_nota"
                app:srcCompat="@drawable/outline_create_black_24dp" />
        </FrameLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_new_text_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="16dp"
            android:layout_marginBottom="76dp"
            app:srcCompat="@drawable/outline_create_black_24dp" />

    <FrameLayout
        android:id="@+id/frame_button_replay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frame_conteudo_nota">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_replay_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            app:srcCompat="@drawable/outline_create_black_24dp" />

    </FrameLayout>

    </FrameLayout>

    <Button
        android:id="@+id/button_save_voice_note"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="120dp"
        android:text="@string/guardar"
        android:textSize="20sp"
        app:backgroundTint="@color/md_blue_100"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>