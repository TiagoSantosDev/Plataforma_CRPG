<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/about_title"
        android:layout_width="382dp"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal"
        android:text="ABOUT"
        android:textAlignment="center"
        android:textColor="@color/md_blue_100"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <FrameLayout
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ver_horarios">

    </FrameLayout>

    <FrameLayout
        android:layout_width="378dp"
        android:layout_height="292dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="102dp">

        <TextView
            android:id="@+id/text_motoristas"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="This app uses the following open-source libraries:"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/frame_motorista_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/text_to_from_1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="Timeline View, licensed under the Apache 2.0 license, source: "
                android:textAlignment="gravity"
                android:textColor="@color/colorBlack"
                android:textSize="25sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_motorista_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@id/frame_de_para_1">

            <TextView
                android:id="@+id/text_to_from_3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="@string/motorista_b"
                android:textAlignment="gravity"
                android:textColor="@color/colorBlack"
                android:textSize="25sp" />


        </FrameLayout>
    </FrameLayout>

    <Button
        android:id="@+id/button_return_transports"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="76dp"
        android:text="@string/regressar"
        android:textColor="@color/colorBlack"
        android:textSize="25sp"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="8dp"
        app:rippleColor="@color/colorBlack"
        app:strokeColor="@color/colorBlack"
        app:strokeWidth="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

