<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/about_title"
        android:layout_width="382dp"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/about"
        android:textAlignment="center"
        android:textColor="@color/md_blue_100"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <FrameLayout
        android:layout_width="399dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_title">
    </FrameLayout>

    <FrameLayout
        android:layout_width="377dp"
        android:layout_height="480dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="102dp">

        <TextView
            android:id="@+id/title_used_libs"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_uses_libraries"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/frame_lib_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/text_lib_1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:autoLink="web"
                android:gravity="center_vertical"
                android:text="Timeline View, licensed under the Apache 2.0 license,
                                    Source: https://github.com/vipulasri/Timeline-View"
                android:textAlignment="gravity"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_lib_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@id/frame_lib_1">

            <TextView
                android:id="@+id/text_lib_2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:autoLink="web"
                android:gravity="center_vertical"
                android:text="Expandable Layout, by SkyDoves, licensed under the Apache 2.0 license,
                                    Source: https://github.com/vipulasri/Timeline-View"
                android:textAlignment="gravity"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_lib_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@id/frame_lib_2">

            <TextView
                android:id="@+id/text_lib_3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:autoLink="web"
                android:gravity="center_vertical"
                android:text="Timeline View, licensed under the Apache 2.0 license,
                                    Source: https://github.com/vipulasri/Timeline-View"
                android:textAlignment="gravity"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_lib_4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toBottomOf="@id/frame_lib_3">

            <TextView
                android:id="@+id/text_lib_4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:autoLink="web"
                android:gravity="center_vertical"
                android:text="Timeline View, licensed under the Apache 2.0 license,
                                    Source: https://github.com/vipulasri/Timeline-View"
                android:textAlignment="gravity"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />
        </FrameLayout>
    </FrameLayout>

    <Button
        android:id="@+id/button_return_transports"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="76dp"
        android:text="CLOSE"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:backgroundTint="@android:color/transparent"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/colorBlack"
        app:strokeColor="@color/colorBlack"
        app:strokeWidth="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

