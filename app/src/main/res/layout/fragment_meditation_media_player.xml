<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plataforma.crpg.ui.meditation.MeditationMediaPlayerFragment"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/mood_image_frame"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08">

        <TextView
            android:id="@+id/text_selected_mood"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/relaxado"
            android:textAlignment="center"
            android:background="@color/md_blue_100"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:layout_marginTop="36dp"
            android:src="#68AA6A"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="377dp"
        android:layout_height="215dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mood_image_frame"
        tools:layout_editor_absoluteY="342dp">

        <FrameLayout
            android:id="@+id/frame_motorista_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"/>

        <FrameLayout
            android:id="@+id/frame_motorista_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@id/frame_de_para_1">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_start_recording"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintRight_toLeftOf="@+id/button_stop_recording"
                app:layout_constraintTop_toBottomOf="@+id/titulo_nova_nota"
                app:srcCompat="@drawable/ic_arrow_right_24dp" />

        </FrameLayout>

    </FrameLayout>

    <Button
        android:id="@+id/button_return_meditation"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="76dp"
        android:text="@string/regressar"
        android:textColor="@color/md_blue_100"
        android:textSize="25sp"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="8dp"
        app:rippleColor="@color/md_blue_100"
        app:strokeColor="@color/md_blue_100"
        app:strokeWidth="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

