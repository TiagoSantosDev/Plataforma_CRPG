<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.plataforma.crpg.ui.transports.CustomTransportsFragment">

    <TextView
        android:id="@+id/selecione_transportes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/selecione_o_tranporte"
        android:textAlignment="center"
        android:textColor="@color/md_blue_200"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <FrameLayout
        android:id="@+id/custom_transports_text_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selecione_transportes">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/botao_escolha_transportes_fixos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/colorGrey50"
            app:cardCornerRadius="40dp"
            app:cardElevation="5dp"
            app:contentPadding="0dp"
            app:strokeColor="#F9B401"
            app:strokeWidth="5dp">

            <TextView
                android:id="@+id/title_transportes_fixos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/camioneta_do_crpg"
                android:textAlignment="center"
                android:textColor="@color/md_blue_200"
                android:textSize="20sp" />
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_transportes_personalizados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_transports_text_frame">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/botao_escolha_transportes_personalizados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/colorGrey50"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:contentPadding="0dp"
            app:strokeColor="@color/md_blue_200"
            app:strokeWidth="3dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_custom_transports_background_image"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:scaleType="fitXY"
                android:src="@drawable/stcp_background"
                android:contentDescription="@string/autocarro_stcp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <TextView
                android:id="@+id/text_transportes_personalizados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transporte_personalizado"
                android:textAlignment="center"
                android:textColor="@color/md_blue_200"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/frame_de_para_1"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/subtext_transportes_personalizados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/frame_de_para_1">
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_transportes_publicos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="52dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_transportes_personalizados">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/botao_selecionar_transportes_publicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:cardBackgroundColor="@color/colorGrey50"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:contentPadding="0dp"
            app:strokeColor="@color/PrimaryGreen"
            app:strokeWidth="3dp">

            <TextView
                android:id="@+id/text_motoristas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/transportes_publicos"
                android:textAlignment="center"
                android:textColor="@color/md_blue_100"
                android:textSize="22sp"/>

            <FrameLayout
                android:id="@+id/frame_motorista_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/frame_de_para_1">

                <TextView
                    android:id="@+id/text_motorista_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/motorista_b"
                    android:textAlignment="gravity"
                    android:textColor="@color/md_blue_100"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_contacto_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/contacto_b"
                    android:textAlignment="gravity"
                    android:textColor="@color/md_blue_100"
                    android:textSize="20sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_motorista_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/frame_de_para_1">

                <TextView
                    android:id="@+id/text_motorista_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/motorista_c"
                    android:textAlignment="gravity"
                    android:textColor="@color/md_blue_100"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_contacto_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/contacto_c"
                    android:textAlignment="gravity"
                    android:textColor="@color/PrimaryGreen"
                    android:textSize="20sp" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

